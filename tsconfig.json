{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowUmdGlobalAccess": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@config/*": ["src/config/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@navigation": ["src/navigation"],
      "@navigation/*": ["src/navigation/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"]
    }
  }
}
